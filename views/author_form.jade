extends catloglayout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='fname') First Name:
      input#first_name.form-control(type='text', placeholder='First name' name='fname' required='true' value=(undefined===author ? '' : author.fname) )
      label(for='address') Address:
      input#address.form-control(type='text', placeholder='Address' name='address' required='true' value=(undefined===author ? '' : author.address))
    div.form-group
      label(for='dob') Date of birth:
      input#dob.form-control(type='date', name='dob', value=(undefined===author ? '' : author.dob) )
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg